@model IEnumerable<LightUsageTracker_Core.Core.Entities.LightUsage>
@{
    var user = ViewBag.User as LightUsageTracker_Core.Core.Entities.Users;
    ViewData["Title"] = $"Light Usage for {user?.Room_No}";
}

<div class="row justify-content-center mt-4">
    <div class="col-lg-8 col-md-10">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="bi bi-lightning-charge me-2"></i>@ViewData["Title"]
                </h4>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="bi bi-arrow-left"></i> Back to Users
                </a>
            </div>

            <div class="card-body p-4">
                <table class="table table-hover align-middle text-center">
                    <thead class="table-primary">
                        <tr>
                            <th><i class="bi bi-calendar-date me-1"></i>Date</th>
                            <th><i class="bi bi-speedometer2 me-1"></i>Usage (kWh)</th>
                            <th><i class="bi bi-cash-stack me-1"></i>Amount (₦)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usage in Model)
                        {
                            <tr>
                                <td>@usage.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="fw-semibold">@usage.KilowattPerHour</td>
                                <td class="text-success fw-semibold">@usage.Amount</td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="alert alert-info text-center mt-3">
                        <i class="bi bi-info-circle me-1"></i>No light usage records found.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

