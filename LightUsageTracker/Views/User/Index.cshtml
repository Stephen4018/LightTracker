@model IEnumerable<LightUsageTracker_Core.Core.Entities.Users>

@{
    ViewData["Title"] = "Users";
}

<h2 class="mb-3">All Users</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Username</th>
            <th>Room Number</th>
            <th>Present Light Usage(KW/H)</th>
            <th>Past Light Usage(KW/H)</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Room_No</td>
                    <td>@(user.PresentLightUsage?.ToString() ?? "0 KW/H")</td>
                    <td>@(user.PastLightUsage?.ToString() ?? "0 KW/H")</td>
                    <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this user?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                        <a asp-action="GetLightUsagesForSingleUser"
                           asp-route-id="@user.UserId"
                           class="btn btn-sm btn-info">
                            <i class="bi bi-lightning"></i> View Usages
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-danger">No users found</td>
            </tr>
        }
    </tbody>
</table>
